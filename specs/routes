$PathPattern :=
$Wildcard := / | ?

$Substitution := /int[\|int] | ?int[\|int]

string | $PathPattern | $Wildcard | $RegEx => [
	template ?=> string,
	methods ?=> array(GET,POST),  - default ignore
	contentTypes ?=> array(string),  - if methods contains POST; else and default ignore
	objects ?=> [
		string | $Substitution => [
			as ?=> string,
			action ?=> list | count | show | edit | delete,
			options ?=> […]

			identifier => string | $Substitution,  - if action = show | edit | delete; else and default ignore

			amount ?=> int | $Substitution,  - required if action = list
			page ?=> int | $Substitution,  - default 1
		],
		~
	],
	controllers ?=> [
		string | $Substitution => […],
		~
	]
]



NEW:

	objects ?=> [
		string (name) => [
			class => string | $Substitution
		]
	]


NEW (Octopus):

METHOD = GET|POST|PUT|DELETE|*
URL = string|PATHPATTERN|WILDCARD|REGEX

'METHOD URL' => [
	?template => string
	?entities => [
		string (name) => [
			class => string|SUBSTITUTION

			(for default EntityController)
			action => list|show|edit|delete|new

			(if action==show|edit|delete)
			?identify_by => string
			identifier => string|SUBSTITUTION

			(if action==list OR action==show and the entity has relationships)
			?amount => int|SUBSTITUTION
			?page => int|SUBSTITUTION (ignored if amount is not set)
		]
	]
	?controllers => [

	]
]
