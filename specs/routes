{
	string | PathPattern | Wildcard | RegEx: {
		"template": templateName,
		"controllers": {
			className | Substitution | string: {							| string only if alias is set
				["alias": className | Substitution],
				"action": "list" | "new" | "show" | "edit" | "delete",

				"amount": int												| if action=="list"|"show"
				["page": int | Substitution]								|

				"identifier": string | Substitution							| if action=="show"|"edit"|"delete"

				["custom": {…}]
			}
		}
	}
}


